<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000" >

    <TextView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/hello_world_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="#000000"
        android:padding="10dip"
        android:text="@string/hello_world_info_text"
        android:textColor="#ffffff"
        android:textSize="16dip" />

    <Button
        android:id="@+id/say_hello"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello_world_info"
        android:layout_marginTop="5px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="10dip"
        android:text="@string/say_hello" />

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/say_hello"
        android:layout_marginTop="56dp"
        android:background="#000000"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/hello_world_text"
        android:textColor="#ffffff"
        android:textSize="16dip" />

    <Button
        android:id="@+id/see_map"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/say_hello"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="onClick"
        android:padding="10dip"
        android:text="@string/see_map" />

</RelativeLayout>
