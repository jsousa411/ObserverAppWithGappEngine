<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
    <div id="widget">
        <div id="header">
            <div ui:field="status" class="status none"></div>
            <p>Try out roundtripping data to App Engine.</p>
            <g:Button ui:field="sayHelloButton">Say Hello</g:Button>
            
        </div>

        <div id="message">
            <p>Send a poke to your Android device using Cloud to Device Messaging.</p>
            <div class="roundRect">
                <input ui:field="recipientArea" type="text" class="field" size="62"
                    placeholder="pat@example.com" />
                <textarea ui:field="messageArea" cols="46" rows="3" placeholder="Message" />
            </div>
            <g:Button ui:field="sendMessageButton">Send Message</g:Button>
        </div>
        <div id ="footer">
        <div>
        
        <tr>
        	<td>
        		<div class="roundRect">
        		   <p>Input Id Number</p>
        		    
        		   <input ui:field="nameId" type="text" class="field" size="22"
                    placeholder="pat@example.com" />
                    
        		  <p> Input recepient</p>
        		  
        		  
        		   <input ui:field="name" type="text" class="field" size="22"
                    placeholder="pat@example.com" />
                   <p>Input message or task</p>
                    <textarea ui:field="nameMessage" type="text" class="field" size="22"
                    placeholder="Message" />
				</div>
        	</td>
        </tr>
        </div>
         <div id="message">
        <tr>
        	<td>
        	   
        		<g:Button ui:field="addTaskButton">Add Task</g:Button>
        	</td>
        	<td>
        	
              		<g:Button ui:field="updateTaskButton">Update Task</g:Button>
            
        	</td>
        	<td>
        	
              		<g:Button ui:field="queryTaskButton">Query Task</g:Button>
            
        	</td>
        	<td>
        	
              		<g:Button ui:field="deleteTaskButton">Delete Task</g:Button>
            
        	</td>
        	</tr>
            </div>
        </div>
        
    </div>
   </g:HTMLPanel>
</ui:UiBinder>
